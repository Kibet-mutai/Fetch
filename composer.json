{
    "name": "phpgt/fetch",
    "description": "Asynchronous HTTP client with promises for PHP 7 applications.",
    "type": "library",

    "require": {
        "php": ">=7.1.0",
        "react/event-loop": "^1.0.0",
        "react/stream": "^1.0.0",
        "react/promise": "^2.7.0",
        "phpgt/curl": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "7.3.*"
    },

    "license": "MIT",

    "authors": [
        {
            "name": "Greg Bowler",
            "email": "greg.bowler@g105b.com"
        }
    ],

    "autoload": {
        "psr-4": {
            "Gt\\Fetch\\": "./src"
        }
    },

    "keywords": [
        "http",
        "fetch",
        "async",
        "asynchronous",
        "xmlhttprequest",
        "ajax",
        "get",
        "post",
        "curl",
        "curl_multi"
